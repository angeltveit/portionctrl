style=require('./ingredients.styl')

if starred
  h1 Hearted
  .starred
    each item in starred
      .item=item.name
        a(
          (click)=star(item),
          href='javascript:',
        ) ❌

    if !starred.length
      .no-fav You have no favourites 😔
if list
  h1 Ingredients
  input.search(
    name='search',
    placeholder='Search ingredients...',
    (input)=searchIngredients()
  )
  h1
  .ingredients
    each listItem in this.list
      .item
        .name=listItem?.name
        if !isStarred(listItem)
          a(
            (click)=star(listItem),
            href='javascript:',
          ) ❤️