style=require('./ingredients.styl')

if starred
  h1 Starred
  .starred
    each item in starred
      .item=item.name
        a(
          (click)=star(item),
          href='javascript:',
        ) ❌

    if !starred.length
      .no-fav You have no favourites 😔
if list
  h1 Ingredients
  input.name#single-factor-code-text-field(
    name='search',
    placeholder='Search ingredients...',
    (keyup)=searchIngredients()
  )
  .ingredients
    each item in list
      .item
        .name=item.name
        if !isStarred(item)
          a(
            (click)=star(item),
            href='javascript:',
          ) ❤️