:host
  display: flex
  flex-direction: column
h1
  &:first-of-type
    margin-top: 0
h1, h2
  font-weight: 300
  margin: 0
  margin-top: 1em
  color: #00B4D8
  text-align: center
.ingredients, .starred
  display: grid
  flex-direction: column
  height: 150px
  overflow: auto
  margin: 0 1em
  background-color: rgba(0,0,0,0.1)
  border-radius: 5px
  padding: .5em
  scroll-behavior: touch
  .item
    display: flex
    margin: .25em 0
    padding: .5em
    background-color: rgba(0,0,0,0.1)

    a
      margin-left: auto
      color: currentColor
      text-decoration: none
.no-fav
  font-weight: bold
  text-align: center
  font-size: 2em
  color: rgba(0,0,0,0.3)
  margin: auto 0
input
  border: 1px solid rgba(0,0,0,0.2)
  border-radius: 5px
  padding: .5em 1em
  font-size: 16px
  box-sizing: border-box
  margin-bottom: 1em
  margin: .25em 1em
  &:focus
    outline: none
    border-color: #0077B6