
.item
  display: grid
  grid-template-columns: auto 1fr
  background-color: #48CAE4
  padding: 2em 1em
  margin: 1em
  border-radius: 5px
  filter: drop-shadow(2px 2px 0px rgba(0,0,0,0.3))
  color: #0077B6
  cursor: pointer
  .heading
    color: #023E8A
    font-size: 1.5em
  .kcal
    font-weight: bold
    span
      opacity: .6
  .icon
    grid-row: span 2
    width: 5em
    img
      height: 3em
      filter: drop-shadow(1px 1px 0px #000)
.total
  display: flex
  flex-direction: column
  align-items: center
  justify-content: center
  margin-bottom: 2em
  margin-top: -2em
  background-image: url(/images/counter-splash.jpg)
  background-size: cover
  padding: 1em
  .counter
    display: flex
    align-items: center
    justify-content: center
    flex-direction: column
    font-weight: bold
    border: 5px solid #0077B6
    height: 10em
    width: 10em
    border-radius: 50%
    background-color: #fff
    filter: drop-shadow(0px 0px 10px rgba(255, 255, 255, 9))
    h2
      margin: 0
      font-weight: bold
      font-size: 3em
      line-height: 1em
    .heading
      font-size: .9em
      margin-bottom: -.25em
    .description
      font-size: .9em