kcal-auth
  display: flex
  flex-direction: column
  flex: 1
  align-items: center
  justify-content: center
  padding: 1em
  box-sizing: border-box
h1, h2
  font-weight: 300
  margin: 0
  margin-top: 0
  color: #00B4D8
  display: flex
  align-items: center
  justify-content: center
  background-color: #fff
p
  color: rgba(0,0,0,0.7)
  margin-bottom: 2em
.form
  display: flex
  flex-direction: column
  border-radius: .5em
  padding: 1em
  background-color: #fff
  filter: drop-shadow(0px 0px 7px rgba(0,0,0,0.5))
  width: 100%
  margin: 1em
  max-width: 85vw
.label
  padding-top: 1em
  color: rgba(0,0,0,0.7)
  font-weight: bold
  text-transform: uppercase
  font-size: .8em

input
  border: 1px solid rgba(0,0,0,0.2)
  border-radius: 5px
  padding: .5em 1em
  font-size: 16px
  box-sizing: border-box
  margin-bottom: 1em
  &:focus
    outline: none
    border-color: #0077B6
.button
  background-color: #0077b6
  color: rgba(255,255,255,.9)
  padding: 1em
  font-size: 1.25em
  font-weight: bold
  text-align: center
  margin-top: auto
  cursor: pointer