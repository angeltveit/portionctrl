:host
  padding: 1em
.meals
  display: grid
  grid-template-columns: 1fr auto auto
  padding: 1em
  grid-gap: .5em
.date
  grid-column: span 3
  text-align: center
  font-weight: bold
  padding: .5em 0
a
  text-transform: uppercase
  font-weight: bold
  color: #fb81e0
  margin-left: auto
  font-size: .8em
  display: flex
  align-items: center
  text-decoration: none
  &.add
    color: #74f2a7
.kcal
  opacity: .7
  font-style: italic
  &.success
    color: green
  &.warning
    color: orange
  &.danger
    color: red
h1, h2
  font-weight: 300
  margin: 0
  margin-top: 1em
  color: #00B4D8
  text-align: center